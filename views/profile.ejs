<!doctype html>
<html lang="en-us">

<head>
  <title></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- materialize -->
  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link href="../public/assets/css/social-share.css" rel="stylesheet" type="text/css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.0/animate.min.css" rel="stylesheet" type="text/css" />
  <!-- custom -->
  <link href="../public/assets/css/style.css" rel="stylesheet" type="text/css" />

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.min.js"></script>
  <script src="../public/assets/js/utils.js"></script>
</head>

<body>
  <!-- <ul id="slide-out" class="sidenav sidenav-fixed">
    <li class="no-padding">
      
    </li>
  </ul> -->

  <main class="landing">
    <div class="row">
      <div class="col s12 m5 l5 xl3 left-side">
        <div class="auth-col-content mar-auto text-center">
          <div class="logo-centered">
            <a href="index.html">
              <img src=".../public/assets/images/logo.png" alt="logo">
            </a>
          </div>
          <h1>Join Our Community</h1>
          <span class="description">
            Etiam consequat urna at magna bibendum, in tempor arcu fermentum vitae mi massa egestas.
          </span>
          <ul class="login-nav nav nav-tabs mt-5 justify-content-center" role="tablist" id="animate-tab">
            <li><a class="active btn" data-toggle="tab" href="#singin" role="tab" id="singin-tab" data-easein="zoomInUp">Join
                Group</a></li>
            <li><a class="btn" data-toggle="tab" href="#signup" role="tab" id="signup-tab" data-easein="zoomInRight">Create
                Group</a></li>
          </ul>
        </div><!-- // auth-col-content -->
      </div>
      <div class="col s12 m7 l7 xl9 right-side">
        <!-- begin form -->
        <div class="auth-col-form mar-auto">
          <div class="tab-content" id="animate-tab-content">
            <!-- Begin Sign In -->
            
            <h1>Welcome to your profile, <%= user.username %></h1>
        
            <div role="tabpanel" class="ch-h tab-pane show active" id="singin" aria-labelledby="singin-tab">
              <h3>Join a Group</h3>
              <form>
                <div class="group material-input">
                  <input type="password" id="passSearch" required="">
                  <span class="highlight"></span>
                  <span class="bar"></span>
                  <label>Password</label>
                </div>
              </form>
              <div class="row mt-30">
                <div class="col text-left">
                  <div class="styled-checkbox">

                    <label for="remeber">
                      <input class="highlight-check" type="checkbox" name="checkbox" id="remeber">
                      <span>Remember me</span>
                    </label>
                  </div>
                </div>
                <div class="col float-right">
                  <a href="">Forgot Password ?</a>
                </div>
              </div>
              <div class="sign-btn text-center joinGroup">
                <a href="#" class="btn btn-color">
                  Join Group
                </a>
              </div>
        </div>
    </div>
</div>
</html>